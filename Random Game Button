    <script>
        function redirectToRandomSite() {
            const sites = [
                "Game1",
                "Game2",
                "Game3",
                "Game4"
                "Game5"
            ];
            const randomIndex = Math.floor(Math.random() * sites.length);
            window.open(sites[randomIndex], "_blank");
        }
    </script>
</head>
<body>
    <button onclick="redirectToRandomSite()">Random Game?</button>
